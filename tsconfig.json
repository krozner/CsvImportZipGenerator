{
    "compilerOptions": {
        "allowJs": true,
        "lib": ["es2017", "dom"],
        "rootDir": "src",
        "module": "commonjs",
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "allowSyntheticDefaultImports": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es6",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": "./src",
        "resolveJsonModule": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}
